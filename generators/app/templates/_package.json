{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= name %> microservice",
  "config": {
    "debug": "app*",
    "image": "<%= name %>",
    "name": "<%= name %>-ctr"
  },
  "scripts": {
    "watch": "DEBUG=$npm_package_config_debug babel --watch src -d dist --source-maps",
    "nodemon": "nodemon --legacy-watch --watch dist --watch node_modules/atomiq/dist/lib -e js,json",
    "nodemon-docker": "nodemon --legacy-watch --watch dist -e js,json --exec 'docker-compose up --force-recreate'",
    "clean": "rimraf dist",
    "babel": "npm run clean && DEBUG=$npm_package_config_debug babel src -d dist --source-maps",
    "babel-inline": "npm run clean && babel src -d dist --source-maps inline",
    "start": "DEBUG=$npm_package_config_debug node ./dist/app.js",
    "debug": "DEBUG=$npm_package_config_debug node_modules/.bin/node-debug --no-preload --web-host 0.0.0.0 ./dist/app.js",
    "test": "mocha ./dist/test"
  },
  "dependencies": {
    "atomiq": "^0.0.17",
    "babel-polyfill": "^6.3.14",
    "body-parser": "^1.15.0",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "logster": "0.0.5",
    "morgan": "^1.7.0",
    "ramda": "^0.19.1"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.6.5",
    "babel-eslint": "^5.0.0",
    "babel-plugin-syntax-async-functions": "^6.3.13",
    "babel-plugin-transform-regenerator": "^6.6.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "esformatter": "^0.9.2",
    "esformatter-collapse-objects": "^0.5.1",
    "eslint": "^2.3.0",
    "node-fetch": "^1.3.3",
    "node-inspector": "^0.12.7",
    "nodemon": "^1.9.1",
    "rimraf": "^2.5.2",
    "source-map-support": "^0.4.0"
  }
}
