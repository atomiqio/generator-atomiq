{
  "name": "<%= name %>",
  "version": "0.0.0",
  "config": {
    "image": "<%= name %>-image",
    "name": "<%= name %>-ctr",
    "start_cmd": "node ./lib/app.js",
    "debug_cmd": "node-debug --no-preload --web-host 0.0.0.0 ./lib/app.js"
  },
  "scripts": {
    "watch": "babel --watch src -d lib --source-maps",
    "clean": "rm -rf ./lib",
    "build": "npm run babel-build && npm run docker-build",
    "babel-build": "npm run clean && babel src -d lib --source-maps",
    "babel-build-inline-sourcemaps": "npm run clean && babel src -d lib --source-maps inline",
    "docker-build": "docker build -t $npm_package_config_image .",
    "docker-run-detached": "docker run -e DEBUG=$DEBUG -t -d -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_start_cmd",
    "docker-run-detached-debug": "docker run -e DEBUG=$DEBUG -t -d -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_debug_cmd",
    "docker-run": "docker run -e DEBUG=$DEBUG -it --rm -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_start_cmd",
    "docker-run-debug": "docker run -e DEBUG=$DEBUG -it --rm -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_debug_cmd",
    "docker-run-mounted": "docker run -e DEBUG=$DEBUG -it --rm -v $PWD:/usr/src/app -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_start_cmd",
    "docker-run-mounted-debug": "docker run -e DEBUG=$DEBUG -it --rm -v $PWD:/usr/src/app -p 8080:8080 --name $npm_package_config_name $npm_package_config_image $npm_package_config_debug_cmd",
    "default": "npm run babel-build && npm run docker-run-mounted-debug"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "body-parser": "^1.15.0",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "logster": "0.0.5",
    "morgan": "^1.7.0"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-plugin-syntax-async-functions": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-runtime": "^6.3.19"
  }
}
